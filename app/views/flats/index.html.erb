<h1>List flats</h1>

<% @flats.each do |flat| %>
  <p><%= flat.name %></p>
  <p><%= flat.address %></p>
  <p><%= flat.description %></p>
  <p><%= flat.price_per_night%></p>
  <p><%= flat.number_of_guests%></p>
  <p>
    <%= link_to "Show this flat", flat_path(flat), class: "btn btn-success" %>
  </p>
<% end %>


<%= link_to "+ Add flat", new_flat_path, class: "btn btn-primary" %>
