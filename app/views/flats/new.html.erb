<h1>New flat</h1>

<%= simple_form_for(@flat) do |f| %>

  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description%>
  <%= f.input :price_per_night %>
  <%= f.input :number_of_guests %>
  <%= f.submit class:"btn btn-primary"%>
<% end %>

<p><%= link_to "Return at list flats", flats_path, class: "btn btn-primary" %></p>
